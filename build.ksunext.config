# ==============================================================================
# Kernel Source Configuration
# ==============================================================================

# Official source file name (should be in the root directory)
# official_source="SM-S9210_HKTW_14_Opensource.zip"

# Custom cache root directory (optional, defaults to ./cache)
# cache_root="/path/to/custom/cache"

# ==============================================================================
# KernelSU Configuration
# ==============================================================================

# KernelSU platform selection
# Options: "sukisu-ultra", "ksu-next"
ksu_platform=ksu-next

# KernelSU installation script URL
ksu_install_script=https://raw.githubusercontent.com/pershoot/KernelSU-Next/next-susfs/kernel/setup.sh

# KernelSU branch to use
ksu_branch=next-susfs

# ==============================================================================
# SuSFS Configuration
# ==============================================================================

# Enable/disable SuSFS integration
ksu_add_susfs=true

# SuSFS repository URL
susfs_repo=https://github.com/ShirkNeko/susfs4ksu.git

# SuSFS branch to use
susfs_branch=gki-android14-6.1
